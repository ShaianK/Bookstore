<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" fx:controller="book.store.OwnerStartScreenController">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Owner Dashboard" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            
            <Button text="Books" onAction="#handleBooksButton" 
                    style="-fx-pref-width: 200; -fx-pref-height: 40; -fx-font-size: 16;"/>
            <Button text="Customers" onAction="#handleCustomersButton" 
                    style="-fx-pref-width: 200; -fx-pref-height: 40; -fx-font-size: 16;"/>
            <Button text="Logout" onAction="#handleLogoutButton" 
                    style="-fx-pref-width: 200; -fx-pref-height: 40; -fx-font-size: 16; -fx-text-fill: red;"/>
        </VBox>
    </children>
</AnchorPane>