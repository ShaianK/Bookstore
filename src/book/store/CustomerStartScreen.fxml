<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="book.store.CustomerStartController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" />
        </HBox>
        
        <TableView fx:id="booksTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="433.0" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="priceColumn" prefWidth="167.0" text="Price">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="selectColumn" prefWidth="159.0" text="Select" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handlePurchase" style="-fx-pref-width: 150; -fx-font-weight: bold;" text="Purchase" />
            <Button onAction="#handleRedeemPoints" style="-fx-pref-width: 150; -fx-font-weight: bold;" text="Redeem Points" />
        </HBox>
        
        <Label fx:id="statusLabel" style="-fx-text-fill: #666; -fx-font-style: italic;" />
        
        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#handleLogout" style="-fx-text-fill: red; -fx-padding: 5 15;" text="Logout" />
        </HBox>
    </VBox>
</AnchorPane>
