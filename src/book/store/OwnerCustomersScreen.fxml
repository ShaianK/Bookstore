<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" fx:controller="book.store.OwnerCustomersController">
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <!-- Top Part - Table -->
        <TableView fx:id="customersTable" prefHeight="300">
            <columns>
                <TableColumn text="Username" prefWidth="266">
                    <cellValueFactory>
                        <PropertyValueFactory property="username" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Password" prefWidth="266">
                    <cellValueFactory>
                        <PropertyValueFactory property="password" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Points" prefWidth="266">
                    <cellValueFactory>
                        <PropertyValueFactory property="points" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <!-- Middle Part - Add Form -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Username:" />
            <TextField fx:id="usernameField" prefWidth="200" />
            <Label text="Password:" />
            <TextField fx:id="passwordField" prefWidth="200" />
            <Button text="Add" onAction="#handleAddCustomer" style="-fx-pref-width: 80;" />
        </HBox>

        <!-- Bottom Part - Action Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Delete" onAction="#handleDeleteCustomer" style="-fx-pref-width: 100;" />
            <Button text="Back" onAction="#handleBack" style="-fx-pref-width: 100;" />
        </HBox>
    </VBox>
</AnchorPane>